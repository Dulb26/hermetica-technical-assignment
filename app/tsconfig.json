{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "types": ["vite/client"],
    "outDir": "../.cache/typescript-app",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "*": ["*", "types/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.d.ts",
    "**/*.tsx",
    "**/*.json",
    "types/**/*.d.ts"
  ],
  "exclude": ["dist/**/*", "vite.config.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
